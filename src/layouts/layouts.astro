---
import '../styles/global.css';
import '../styles/prism.css';
import '../styles/icons/css/icon-page.css';
import Header from '../components/header.astro';
import footer_logo from '../images/footer-logo.svg';
const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
<head>
